<div class="other-features-area section-padding">
  <div class="container">
    <div class="other-features-wrap">
      <div class="row">
        {% for block in section.blocks %}
          <div class="col-lg-4 col-md-6 col-12">
            <div class="features-item wow fadeInUp" data-wow-duration="1200ms">
              <div class="features-icon">
                <img
                  src="{{ block.settings.background_image | image_url: width: 100 }}"
                  width=""
                  height=""
                  alt="">
              </div>
              <div class="features-text">
                <h2>{{ block.settings.title }}</h2>
                <p>{{ block.settings.description }}</p>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Info Section",
    "settings": [],
    "blocks": [
      {
        "name": "Add Info",
        "type": "block",
        "settings": [
          {
            "type": "image_picker",
            "id": "background_image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "COMPLIMENTARY SHIPPING"
          },
          {
            "type": "text",
            "id": "description",
            "label": "Description",
            "default": "Enjoy free shipping on U.S. orders over $100."
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Info Section",
        "blocks": [
          {
            "type": "block"
          }
        ]
      }
    ]
  }
{% endschema %}