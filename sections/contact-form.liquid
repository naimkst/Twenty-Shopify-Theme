<!-- start of contact-section -->
<section class="contact-section section-padding">
  <div class="container">
    <div class="contact-wrap">
      <div class="contact-form-area">
        <h2>{{ section.settings.form_title }}</h2>
        {% form 'contact'
          , class: 'contact-validation-active' %}
          <div class="row">
            <div class="col-lg-6">
              <div class="form-field">
                <input
                  type="text"
                  class="form-control"
                  name="contact[first_name]"
                  id="name"
                  placeholder="First Name*">
              </div>
            </div>
            <div class="col-lg-6">
              <div class="form-field">
                <input
                  type="text"
                  class="form-control"
                  name="contact[last_name]"
                  id="lname"
                  placeholder="Last Name">
              </div>
            </div>
            <div class="col-lg-6">
              <div class="form-field">
                <input
                  type="email"
                  class="form-control"
                  name="contact[email]"
                  id="email"
                  placeholder="Your Email*">
              </div>
            </div>
            <div class="col-lg-6">
              <div class="form-field">
                <input
                  type="text"
                  class="form-control"
                  name="contact[phone]"
                  id="phone"
                  placeholder="Phone">
              </div>
            </div>
            <div class="col-lg-12">
              <div class="form-field">
                <select name="contact[service]" id="service">
                  <option value="">Please Select</option>
                  <option value="watches">watches</option>
                  <option value="straps">Straps</option>
                  <option value="accessories">Accessories</option>
                </select>
              </div>
            </div>
            <div class="col-lg-12">
              <textarea
                class="form-control"
                name="contact[note]"
                id="note"
                placeholder="Start Typing here..."></textarea>
            </div>
          </div>
          <div class="submit-area">
            <button type="submit" class="theme-btn">{{ section.settings.button_text }}</button>
            <div id="loader">
              <i class="ti-reload"></i>
            </div>
          </div>
          {%- if form.posted_successfully? -%}
            <div class="clearfix error-handling-messages">
              <div id="success">Thank you</div>
            </div>
          {%- endif -%}

          {%- if form.errors contains 'email' -%}
            <div class="clearfix error-handling-messages">
              <div id="error">
                Error occurred while sending email. Please try again later.
              </div>
            </div>
          {%- endif -%}

        {% endform %}
      </div>
    </div>
  </div>
</section>
<!-- end of contact-section -->

{% schema %}
  {
    "name": "Contact Form Section",
    "settings": [
      {
        "type": "text",
        "id": "form_title",
        "label": "Form Title",
        "default": "Contact Us"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Submit"
      }

    ],
    "presets": [
      {
        "name": "Contact Form Section"
      }
    ]
  }
{% endschema %}