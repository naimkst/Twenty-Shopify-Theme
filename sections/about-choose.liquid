<!-- start of choose-section -->
<section class="choose-section style-2 section-padding">
  <div class="container">
    <div class="choose-wrap">
      <div class="row">
        <div class="col-lg-6 col-12">
          <div class="choose-text-left wow fadeInLeftSlow" data-wow-duration="1200ms">
            <div class="left-sticky">
              <div class="choose-title">
                <h2>{{ section.settings.section_title }}</h2>
              </div>
              <p>{{ section.settings.section_description }}</p>
            </div>
          </div>
        </div>
        <div class="col-lg-6 col-12">
          {% for block in section.blocks %}
            <div class="choose-text wow fadeInUp" data-wow-duration="1400ms">
              <h3>{{ block.settings.title }}</h3>
              <h4>{{ block.settings.slug }}</h4>
              <p>{{ block.settings.description }}</p>
            </div>
          {% endfor %}

        </div>
      </div>
    </div>
  </div>
</section>
<!-- end of choose-section -->


