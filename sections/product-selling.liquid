<section class="product-selling-section section-padding pt-0">
  <div class="section-title">
    <h2>{{ section.settings.section_title }}</h2>
  </div>

  <div class="product-wrap">
    <div class="container-fluid">
      <div class="row product-active owl-carousel">
        {% for product in collections['all'].products %}
          <div class="product-item wow fadeInUp" data-wow-duration="1{{ forloop.index0 }}00ms">
            <form
              class="form"
              action="/cart/add"
              method="post"
              enctype="multipart/form-data"
              id="addToCart">
              <input
                type="hidden"
                class="variant-idss"
                id="variant-id"
                name="id"
                value="{{ product.variants.first.id }}">
              {% if product.metafields.product.sale_tag.value != blank %}
                <span class="tag {% if product.metafields.product.sale_tag.value == "Sale" %} sale {% endif %}">{{ product.metafields.product.sale_tag.value }}</span>
              {% endif %}
              <div class="product-image">
                <img
                  src="{{ product.featured_image | image_url: width: 400  }}"
                  width=""
                  height=""
                  alt="">
              </div>
              <div class="product-info">
                <h2>
                  <a href="{{ product.url }}">{{ product.title }}</a>
                </h2>
                <div class="price">
                  <span>{{ product.price | money }}</span>
                </div>
                <input
                  id="product-count"
                  class="product-count"
                  type="hidden"
                  value="1"
                  name="quantity">
                {% comment %} <a href="#" class="cart-btn">Add to cart</a> {% endcomment %}
                <button type="submit" class="cart-btn">Add to cart</button>
              </div>
            </form>
          </div>
        {% endfor %}

      </div>
      <div class="view-btn">
        <a href="{{ section.settings.view_all_url }}" class="theme-btn">{{ section.settings.view_all_text }}</a>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Product Selling Section",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Section Title",
        "default": "BEST SELLERS"
      },
      {
        "type": "text",
        "id": "view_all_text",
        "label": "View All Text",
        "default": "VIEW ALL"
      },
      {
        "type": "url",
        "id": "view_all_url",
        "label": "View All URL"
      }
    ],
    "presets": [
      {
        "name": "Product Selling Section"
      }
    ]
  }
{% endschema %}